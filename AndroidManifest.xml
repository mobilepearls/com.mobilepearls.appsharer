<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.mobilepearls.appsharer"
      android:versionCode="4" android:versionName="1.3">
    <application android:icon="@drawable/icon" android:label="App Sharer">
        <activity android:name=".AppSharerActivity"
                  android:label="App Sharer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AppSharerAboutActivity" android:label="App Sharer"/>
    </application>
    <uses-sdk android:minSdkVersion="4" />
    <supports-screens android:anyDensity="true" android:smallScreens="true" android:normalScreens="true" android:largeScreens="true"/>
</manifest> 